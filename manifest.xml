<?xml version="1.0" encoding="UTF-8"?>
<!--
  ============================================
  CID SUBJECT TAGGER - OFFICE ADD-IN MANIFEST
  ============================================
  
  HOSTING: GitHub Pages
  URL: https://thedavisteam.github.io/cid-outlook-addin/
  
  DEPLOYMENT:
  1. Run: npm run build
  2. Upload dist/ contents to GitHub repo: thedavisteam/cid-outlook-addin
  3. Sideload this manifest in Outlook Web via "Add from file"
  
  VERSION HISTORY:
  - 3.0.1.0 (2026-01-13): Updated for GitHub Pages hosting
  - 3.1.1.0 (2026-02-02): Added CID Register quick links (new item + list view)
  - 3.1.1.1 (2026-02-02): Cache-bust hosted URLs for faster rollout
-->
<OfficeApp
  xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
  xmlns:mailappor="http://schemas.microsoft.com/office/mailappversionoverrides"
  xmlns:mailappor1="http://schemas.microsoft.com/office/mailappversionoverrides/1.1"
  xsi:type="MailApp">
  <Id>f9c7c7e2-6b53-4f0e-a38c-6c8f7d1f12e9</Id>
  <Version>3.1.1.1</Version>
  <ProviderName>CID Automation</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="CID Subject Tagger" />
  <Description DefaultValue="Auto-append CID tags to email subjects and provide quick links to the CID Register in SharePoint" />
  <IconUrl DefaultValue="https://thedavisteam.github.io/cid-outlook-addin/dist/assets/icon-32.png?v=3.1.1.1" />
  <HighResolutionIconUrl DefaultValue="https://thedavisteam.github.io/cid-outlook-addin/dist/assets/icon-64.png?v=3.1.1.1" />
  <SupportUrl DefaultValue="https://github.com/thedavisteam/cid-outlook-addin" />
  <AppDomains>
    <AppDomain>https://julieandbryce.sharepoint.com</AppDomain>
    <AppDomain>https://login.microsoftonline.com</AppDomain>
    <AppDomain>https://thedavisteam.github.io</AppDomain>
  </AppDomains>
  <Hosts>
    <Host Name="Mailbox" />
  </Hosts>
  <Requirements>
    <Sets>
      <Set Name="Mailbox" MinVersion="1.3" />
    </Sets>
  </Requirements>
  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://thedavisteam.github.io/cid-outlook-addin/dist/taskpane.html?v=3.1.1.1" />
        <RequestedHeight>250</RequestedHeight>
      </DesktopSettings>
    </Form>
  </FormSettings>
  <Permissions>ReadWriteMailbox</Permissions>
  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Edit" />
  </Rule>
  <DisableEntityHighlighting>true</DisableEntityHighlighting>

  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides" xsi:type="VersionOverridesV1_0">
    <Requirements>
      <bt:Sets DefaultMinVersion="1.3">
        <bt:Set Name="Mailbox" MinVersion="1.3" />
      </bt:Sets>
    </Requirements>
    <Hosts>
      <Host xsi:type="MailHost">
        <DesktopFormFactor>
          <FunctionFile resid="Commands.Url" />
          <ExtensionPoint xsi:type="MessageComposeCommandSurface">
            <OfficeTab id="TabDefault">
              <Group id="msgComposeGroup">
                <Label resid="GroupLabel" />
                <Control xsi:type="Button" id="showTaskPaneButton">
                  <Label resid="TaskPaneButtonLabel" />
                  <Supertip>
                    <Title resid="TaskPaneButtonLabel" />
                    <Description resid="TaskPaneButtonDesc" />
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Icon16" />
                    <bt:Image size="32" resid="Icon32" />
                    <bt:Image size="80" resid="Icon80" />
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <SourceLocation resid="TaskPane.Url" />
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>
        </DesktopFormFactor>
      </Host>
    </Hosts>
    <Resources>
      <bt:Images>
        <bt:Image id="Icon16" DefaultValue="https://thedavisteam.github.io/cid-outlook-addin/dist/assets/icon-16.png?v=3.1.1.1" />
        <bt:Image id="Icon32" DefaultValue="https://thedavisteam.github.io/cid-outlook-addin/dist/assets/icon-32.png?v=3.1.1.1" />
        <bt:Image id="Icon80" DefaultValue="https://thedavisteam.github.io/cid-outlook-addin/dist/assets/icon-80.png?v=3.1.1.1" />
      </bt:Images>
      <bt:Urls>
        <bt:Url id="Commands.Url" DefaultValue="https://thedavisteam.github.io/cid-outlook-addin/dist/events.js?v=3.1.1.1" />
        <bt:Url id="TaskPane.Url" DefaultValue="https://thedavisteam.github.io/cid-outlook-addin/dist/taskpane.html?v=3.1.1.1" />
      </bt:Urls>
      <bt:ShortStrings>
        <bt:String id="GroupLabel" DefaultValue="CID" />
        <bt:String id="TaskPaneButtonLabel" DefaultValue="CID Lookup" />
      </bt:ShortStrings>
      <bt:LongStrings>
        <bt:String id="TaskPaneButtonDesc" DefaultValue="Open the CID panel (lookup + CID Register links)." />
      </bt:LongStrings>
    </Resources>

    <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides/1.1" xsi:type="VersionOverridesV1_1">
      <Requirements>
        <bt:Sets DefaultMinVersion="1.12">
          <bt:Set Name="Mailbox" MinVersion="1.12" />
        </bt:Sets>
      </Requirements>
      <Hosts>
        <Host xsi:type="MailHost">
          <Runtimes>
            <Runtime resid="Runtime.Url" lifetime="long">
              <Override type="javascript" resid="Commands.Url" />
            </Runtime>
          </Runtimes>
          <DesktopFormFactor>
            <FunctionFile resid="Commands.Url" />
            <ExtensionPoint xsi:type="MessageComposeCommandSurface">
              <OfficeTab id="TabDefault">
                <Group id="msgComposeGroup">
                  <Label resid="GroupLabel" />
                  <Control xsi:type="Button" id="showTaskPaneButton">
                    <Label resid="TaskPaneButtonLabel" />
                    <Supertip>
                      <Title resid="TaskPaneButtonLabel" />
                      <Description resid="TaskPaneButtonDesc" />
                    </Supertip>
                    <Icon>
                      <bt:Image size="16" resid="Icon16" />
                      <bt:Image size="32" resid="Icon32" />
                      <bt:Image size="80" resid="Icon80" />
                    </Icon>
                    <Action xsi:type="ShowTaskpane">
                      <SourceLocation resid="TaskPane.Url" />
                    </Action>
                  </Control>
                </Group>
              </OfficeTab>
            </ExtensionPoint>
            <ExtensionPoint xsi:type="LaunchEvent">
              <LaunchEvents>
                <LaunchEvent Type="OnMessageRecipientsChanged" FunctionName="onRecipientsChanged" />
                <LaunchEvent Type="OnMessageSend" FunctionName="onMessageSend" SendMode="PromptUser" />
              </LaunchEvents>
              <SourceLocation resid="Runtime.Url" />
            </ExtensionPoint>
          </DesktopFormFactor>
        </Host>
      </Hosts>
      <Resources>
        <bt:Images>
          <bt:Image id="Icon16" DefaultValue="https://thedavisteam.github.io/cid-outlook-addin/dist/assets/icon-16.png?v=3.1.1.1" />
          <bt:Image id="Icon32" DefaultValue="https://thedavisteam.github.io/cid-outlook-addin/dist/assets/icon-32.png?v=3.1.1.1" />
          <bt:Image id="Icon80" DefaultValue="https://thedavisteam.github.io/cid-outlook-addin/dist/assets/icon-80.png?v=3.1.1.1" />
        </bt:Images>
        <bt:Urls>
          <bt:Url id="Runtime.Url" DefaultValue="https://thedavisteam.github.io/cid-outlook-addin/dist/runtime.html?v=3.1.1.1" />
          <bt:Url id="Commands.Url" DefaultValue="https://thedavisteam.github.io/cid-outlook-addin/dist/events.js?v=3.1.1.1" />
          <bt:Url id="TaskPane.Url" DefaultValue="https://thedavisteam.github.io/cid-outlook-addin/dist/taskpane.html?v=3.1.1.1" />
        </bt:Urls>
        <bt:ShortStrings>
          <bt:String id="GroupLabel" DefaultValue="CID" />
          <bt:String id="TaskPaneButtonLabel" DefaultValue="CID Lookup" />
        </bt:ShortStrings>
        <bt:LongStrings>
          <bt:String id="TaskPaneButtonDesc" DefaultValue="Open the CID panel (lookup + CID Register links)." />
        </bt:LongStrings>
      </Resources>
    </VersionOverrides>

  </VersionOverrides>
</OfficeApp>
